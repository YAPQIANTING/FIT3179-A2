{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Highest 5 Countries by Labor Force Percentage",
  "width": 400,
  "height": 200,
  "data": {
    "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179-A2/main/data.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.Percentage != null"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [{"field": "Percentage", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 5"
    },
    {
      "calculate": "round(datum.Percentage * 100) / 100",
      "as": "RoundedPercentage"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Country Name",
          "type": "ordinal",
          "title": "Country",
          "scale": {
            "padding": 0.5
          },
          "axis": {
            "labelAngle": 0
          }
        },
        "y": {
          "field": "RoundedPercentage",
          "type": "quantitative",
          "title": "Labor Force (%)",
          "scale": {
            "domain": [0, 100]
          }
        },
        "color": {
          "field": "RoundedPercentage",
          "type": "quantitative",
          "legend": null
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -5
      },
      "encoding": {
        "x": {
          "field": "Country Name",
          "type": "ordinal"
        },
        "y": {
          "field": "RoundedPercentage",
          "type": "quantitative"
        },
        "text": {
          "field": "RoundedPercentage",
          "type": "quantitative",
          "format": ".2f"
        }
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    }
  }
}
