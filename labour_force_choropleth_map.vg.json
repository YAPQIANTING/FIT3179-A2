{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Labour Force"
  },
  "width": 900,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#bfdfff", "stroke": null}
    },
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "gray", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179-A2/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#e0e0e0", "stroke": "lightgray"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "value": "No Data Available",
            "type": "nominal",
            "title": "Labour Force (%)"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179-A2/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179-A2/main/data.csv",
              "format": {"type": "csv"}
            },
            "key": "Country Name",
            "fields": ["Percentage"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Percentage",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 20, 40, 60, 80, 100],
            "range": ["#d0d8e8", "#91a0ce", "#6279b3", "#344f8f", "#102766"]
          },
          "legend": {
            "title": "Labour Force (%)",
            "orient": "right",
            "titleFontSize": 12,
            "labelFontSize": 12
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Labour Force (%)",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
