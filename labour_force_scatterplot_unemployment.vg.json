{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Labour Force vs Unemployment Rate",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/YAPQIANTING/FIT3179-A2/main/data.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": "point",
      "selection": {
        "point": {
          "type": "multi",
          "fields": ["Country Name"]
        }
      },
      "encoding": {
        "x": {
          "field": "Unemployment Rate",
          "type": "quantitative",
          "title": "Unemployment Rate (%)"
        },
        "y": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Labour Force Percentage (%)"
        },
        "color": {
          "condition": {
            "selection": "point",
            "field": "Country Name",
            "type": "nominal",
            "legend": null
          },
          "value": "lightgray",
          "legend": null
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal"},
          {"field": "Percentage", "type": "quantitative", "title": "Labour Force Percentage (%)"},
          {"field": "Unemployment Rate", "type": "quantitative"}
        ]
      },
      "config": {
        "view": {"stroke": "transparent"},
        "point": {"stroke": "black"}
      }
    },
    {
      "mark": {
        "type": "text",
        "dy": -10
      },
      "encoding": {
        "x": {
          "field": "Unemployment Rate",
          "type": "quantitative"
        },
        "y": {
          "field": "Percentage",
          "type": "quantitative"
        },
        "text": {
          "field": "Country Name",
          "type": "nominal"
        },
        "color": {"value": "black"}
      },
      "transform": [
        {
          "filter": {
            "field": "Country Name",
            "oneOf": ["Qatar", "United Arab Emirates", "Somalia", "Yemen, Rep.", "Djibouti", "Eswatini", "South Africa", "St. Vincent and the Grenadines", "The Bahamas"]
          }
        }
      ]
    }
  ]
}
